@model PickC.Services.DTO.CustomerInfo
@using PickC.Internal2.HtmlHelpers

@{
    ViewBag.Title = "CustomerDetails";
}

<div class="row">
    <div class="col-md-12">
        <div class="tab-main-content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Customers</h3>
                        </div>
                        <div class="box-body">
                            <h5>Customer Info</h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Name</label>
                                        @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Mobile No</label>
                                        @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Email ID</label>
                                        @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Registered Date</label>
                                        @Html.TextBoxFor(x => x.RegistrationDate, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Total Bookings</label>
                                        @Html.TextBoxFor(x => x.TotalBookings, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section secscripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/moment.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>
}

