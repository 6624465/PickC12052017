@model Operation.Contract.Cancellation
@{
    ViewBag.Title = "UserAppCancellation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section seccss{
    <link href="~/Css/jquery.dataTables.min.css" rel="stylesheet" />
    }
<section class="content">
    <div class="row">
        <div class="col-md-12">
            @{ Html.RenderPartial("DashboardMenuList"); }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @{ Html.RenderPartial("UserApps"); }
        </div>
    </div>
    <div class="col-md-6">
        <div class="accordion">
            <div class="accordion-section">
                <a class="accordion-section-title btn btn-default btn-sm btn-them" href="#accordion-1">Cancelled By Customer</a>
                <div id="accordion-1" class="accordion-section-content">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="customer_cancellation" class="table table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Customer Name</th>
                                            <th>Mobile No.</th>
                                            <th>Booking No.</th>
                                            <th>Booking Date</th>
                                            <th>Reason For Cancellation</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.customerCancellation)
                                    {
                                            <tr>
                                                <td>@Html.DisplayFor(i=>item.CustomerName)</td>
                                                <td>@Html.DisplayFor(i => item.MobileNo)</td>
                                                <td>@Html.DisplayFor(i => item.BookingNo)</td>
                                                <td>@Html.DisplayFor(i => item.BookingDate)</td>
                                                <td>@Html.DisplayFor(i => item.Reason)</td>
                                                <td>@Html.DisplayFor(i => item.Status)</td>
                                            </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
    <div class="accordion">
        <div class="accordion-section">
            <a class="accordion-section-title btn btn-default btn-sm btn-them" href="#accordion-2">Cancelled By Driver</a>
            <div id="accordion-2" class="accordion-section-content">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table  id="driver_cancellation" class="table table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>Booking No.</th>
                                        <th>Driver Name</th>
                                        <th>Truck No.</th>
                                        <th>Mobile No.</th>
                                        <th>Cancellation Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.driverCancellation)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(i => item.BookingNo)</td>
                                            <td>@Html.DisplayFor(i => item.DriverName)</td>
                                            <td>@Html.DisplayFor(i => item.TruckNo)</td>
                                            <td>@Html.DisplayFor(i => item.MobileNo)</td>
                                            <td>@Html.DisplayFor(i => item.Remarks)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </div>
    </section>
@section secscripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")"></script>

    <script type="text/javascript">

        $(function () {
            $('#UserAppCancellation').parent().addClass('active');
        });

        $(document).ready(function () {
            $('#accordion').accordion();
            $('#driver_cancellation').dataTable();
            $('#customer_cancellation').dataTable();
        });

        $(document).ready(function () {
            debugger;
            function close_accordion_section() {

                $('.accordion .accordion-section-title').removeClass('active');
                $('.accordion .accordion-section-content').slideUp(300).removeClass('open');
            }

            $('.accordion-section-title').click(function (e) {

                // Grab current anchor value
                var currentAttrValue = $(this).attr('href');

                if ($(e.target).is('.active')) {
                    //close_accordion_section();
                } else {
                   // close_accordion_section();

                    // Add active class to section title
                    $(this).addClass('active');
                    // Open up the hidden content panel
                    $('.accordion ' + currentAttrValue).
                        slideDown(300).addClass('open');
                }

            });
        });
    </script>
    }

    <style>
        .accordion, .accordion * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

        .accordion {
            overflow: hidden;
            box-shadow: 0px 1px 3px rgba(0,0,0,0.25);
            border-radius: 3px;
            background: #f7f7f7;
        }

        .accordion-section-title {
            width: 100%;
            padding: 15px;
            display: inline-block;
            border-bottom: 1px solid #1a1a1a;
            background: #333;
            transition: all linear 0.15s;
            margin: 0 0 30px 0;
            font-size: 1.200em;
            text-shadow: 0px 1px 0px #1a1a1a;
            color: yellow;
        }

            .accordion-section-title:active, .accordion-section-title:hover, .accordion-section-title:focus {
                background-color: rgb(236, 236, 58);
                text-decoration: none;
            }

        .accordion-section:last-child .accordion-section-title {
            border-bottom: none;
        }


        .accordion-section-content {
            padding: 15px;
            display: none;
        }
    </style>

